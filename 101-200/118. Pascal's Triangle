<?php
class Solution {

    /**
     * @param Integer $numRows
     * @return Integer[][]
     */
    function generate($numRows) {
        $triangle = [];
        for($i = 0; $i<$numRows; $i++){
            if($i == 0){
                $triangle[] = [1];
                continue;
            }
            if($i == 1) {
                $triangle[] = [1,1];
                continue;
            }
            $row = range(0 ,$i);
            $row[0] = 1;
            $row[$i] = 1;
            $mid = floor($i/2);
            for($j = 1; $j<=$mid; $j++){
                $left = $triangle[$i-1][$j-1];
                $right = $triangle[$i-1][$j];

                $row[$j] = $row[$i-$j] = ($left+$right);
            }
            $triangle[] = $row;
        }
        return $triangle;
    }
}

